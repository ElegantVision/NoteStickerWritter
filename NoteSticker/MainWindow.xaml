<Window x:Class="NoteSticker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NoteSticker"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" WindowStyle="SingleBorderWindow">
    <Window.Background>
        <SolidColorBrush Color="White" Opacity="1"/>
    </Window.Background>
    <StackPanel>
        <Button x:Name="CreateNote" Click="CreateNote_Click">
            <Button.Background>
                <SolidColorBrush Color="White" Opacity="1"/>
            </Button.Background> Note
        </Button>
        <TextBox Text="TextBox" TextWrapping="Wrap" Width="120"/>
        <ScrollViewer Height="100"/>
        <Image Height="100" Width="100" Source="/Images/MoveIcon.png"/>
    </StackPanel>
</Window>
